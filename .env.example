# Example Environment Variables for Trading Bot
# Copy this to .env and fill in your actual values

# ============================================
# EXCHANGE CONFIGURATION
# ============================================

# Binance API Credentials
# Get from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# IMPORTANT: Start with testnet for safety!
# Testnet: https://testnet.binancefuture.com/
# Set to 'false' only when ready for REAL trading
USE_TESTNET=true

# Exchange Type (spot or futures)
EXCHANGE_TYPE=futures

# ============================================
# TRADING CONFIGURATION
# ============================================

# Initial Capital (USDT)
INITIAL_CAPITAL=10000

# Maximum Position Size (% of capital per trade)
MAX_POSITION_SIZE_PCT=0.10

# Risk per Trade (% of capital)
RISK_PER_TRADE_PCT=0.02

# Maximum Daily Loss (% of capital)
MAX_DAILY_LOSS_PCT=0.05

# Maximum Total Drawdown (% of capital)
MAX_DRAWDOWN_PCT=0.15

# Default Leverage (1-125 for Binance Futures)
# WARNING: Higher leverage = higher risk!
DEFAULT_LEVERAGE=3

# Margin Type (ISOLATED or CROSSED)
MARGIN_TYPE=ISOLATED

# ============================================
# ARTIFICIAL INTELLIGENCE
# ============================================

# Google Gemini API (for sentiment analysis)
# Get free key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_key_here

# ML Model Confidence Threshold (0.0-1.0)
ML_CONFIDENCE_THRESHOLD=0.65

# Signal Quality Minimum Score (0-100)
SIGNAL_QUALITY_MIN_SCORE=70

# ============================================
# MONITORING & ALERTS
# ============================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Rotation (max size in MB)
LOG_MAX_SIZE_MB=10

# Email Alerts (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=your_email@gmail.com

# Slack Webhook (optional)
# Create at: https://api.slack.com/apps
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Webhook (optional)
# Create in Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# ============================================
# DATABASE (optional)
# ============================================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=postgres
DB_PASSWORD=your_db_password

# Redis Cache (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# ADVANCED SETTINGS
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug Mode (true/false)
DEBUG=true

# Auto-restart on errors
AUTO_RESTART=true

# Position Reconciliation Interval (seconds)
RECONCILIATION_INTERVAL=300

# Strategy Selection Mode (adaptive, fixed, portfolio)
STRATEGY_MODE=adaptive

# Default Strategy (if mode=fixed)
DEFAULT_STRATEGY=statistical_arbitrage

# Enable Paper Trading Mode (simulate without real orders)
PAPER_TRADING=false

# ============================================
# SECURITY NOTES
# ============================================
# 1. NEVER commit this file to version control
# 2. Keep API keys secure and private
# 3. Use IP whitelist on Binance API settings
# 4. Disable withdrawals on API keys
# 5. Start with testnet and small capital
# 6. Use read-only keys for monitoring dashboards
# 7. Enable 2FA on your exchange account
# 8. Regularly rotate API keys
# 9. Monitor logs for suspicious activity
# 10. Keep your system and dependencies updated
